---
// src/layouts/Layout.astro
import Footer from '../components/layout/footer.astro';
import Header from '../components/layout/header.astro';

// Puedes recibir props si lo necesitas en el futuro
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>{title ? `${title} | Cordeh` : 'Cordeh'}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Sitio creado con Astro y Tailwind" />
  <!-- Importa los estilos globales -->
  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 text-white min-h-screen flex flex-col">
  <Header />	

  <!-- Contenido principal -->
  <main class="flex-grow container mx-auto px-4 py-12">
    <slot />
  </main>
  <Footer />

</body>
</html>